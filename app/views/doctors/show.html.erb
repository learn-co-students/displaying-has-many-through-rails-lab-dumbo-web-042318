<h1>Doctor Profile:</h1><br>
<h4><%= @doctor.name %></h4><br>

<h1>Department:</h1>
<h4><%= @doctor.department %></h4>

<h6>Patients and Appointments</h6>
<ul>
    <% @doctor.patients.each do |patient| %>
        <li>
            <%= link_to patient.name, patient_path(patient) %>
        </li>
    <% end %>
</ul>

<ul>
    <% @doctor.appointments.each do |app| %>
        <li>
            <%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
        </li>
    <% end %>
</ul>
